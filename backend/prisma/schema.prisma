generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  firstname String
  lastname  String
  email     String     @unique
  password  String
  address   String
  phone_num String
  donations Donation[]
}

model Admin {
  id        Int        @id @default(autoincrement())
  firstname String
  lastname  String
  email     String     @unique
  password  String
  address   String
  phone_num String
  campaigns Campaign[]
}

model Campaign {
  id                Int          @id @default(autoincrement())
  name              String
  description       String
  category          CategoryType
  target_amt        String
  raised_amt        Int?         @default(0)
  location          String?
  start_date        DateTime?    @default(now())
  creator_id        Int
  creator           Admin        @relation(fields: [creator_id], references: [id])
  status            Status
  image             String?
  donation_recieved Donation[]
}

enum CategoryType {
  EDUCATION
  HEALTH
  DISASTER_RELIEF
  ORPHANAGE
}

enum Status {
  ACTIVE
  COMPLETED
}

model Donation {
  id          Int      @id @default(autoincrement())
  donor_id    Int
  campaign_id Int
  donor       User     @relation(fields: [donor_id], references: [id])
  campaign    Campaign @relation(fields: [campaign_id], references: [id])
}

model Payment {
  id         String   @id @default(uuid())
  orderId    String   @unique
  amount     Int
  currency   String
  campaignId String
  status     String   @default("PENDING")
  createdAt  DateTime @default(now())
}
